@model UserIndexViewModel[] 
@{ 
	ViewData["Title"] = "Users"; 
}

<h3>Existing users</h3>

<table class="table">
	<tr>
		<th>UserName</th>
		<th>Email</th>
        <th></th>
	</tr>
	@foreach (var item in Model) {
	<tr>
		<td>@item.UserName</td>
		<td>@item.Email</td>
		<td>
			<a class="btn btn-default" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
			<form class="inline-form" asp-action="Delete" asp-route-id="@item.Id">
				<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#myModal" data-id="@item.Id">Delete</button>
			</form>
		</td>
	</tr>
	}
</table>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title" id="myModalLabel">Modal title</h4>
			</div>
			<div class="modal-body">
				Are you sure you want to delete this user?
			</div>
			<form asp-action="Delete" id="modal-delete-form"> 
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
					<button type="submit" class="btn btn-danger">Confirm Delete</button>
				</div>
			</form>
		</div>
	</div>
</div>

<a class="btn btn-success" asp-action="Create">Create</a>

@section Scripts {
	<script src="~/js/user-delete-modal.js"></script>
}
